<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/back_image"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
    android:layout_width="match_parent"
    android:textSize="30dp"
    android:fontFamily="@font/oswald"
    android:textColor="#FFF"
    android:gravity="center"
    android:paddingTop="10dp"
    android:text="Set Up Your Profile"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:text=" Provide the following information to proceed"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/modified_edit_text"

        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_face_black_24dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="#FFF"
            android:hint="Name"
            android:inputType="textCapWords"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/modified_edit_text"

        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_school_black_24dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#FFF"
            android:id="@+id/tvCourse"
            android:textSize="20dp"
            android:hint="Course"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/modified_edit_text"

        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_calender"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#FFF"
            android:id="@+id/tvYear"
            android:hint="Year"
            android:textSize="20dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/modified_edit_text"

        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_stream"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#FFF"
            android:hint="Stream"
            android:id="@+id/tvStream"

            android:textSize="20dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/modified_edit_text"

        android:layout_marginStart="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_local_library_black_24dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#FFF"
            android:id="@+id/tvSection"
            android:textSize="20dp"
            android:hint="Section (optional)"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Let's Go"
        android:textColor="#FFF"
        android:id="@+id/btnLetsGo"
        android:background="@drawable/modified_button"
        android:layout_marginEnd="30dp"/>
    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
</LinearLayout>
</ScrollView>